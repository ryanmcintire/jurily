= render "shared/flash"
.panel.panel-default.devise-bs
  .panel-heading
    %h4= t('.sign_up', :default => "Sign up")
  .panel-body
    = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { role: "form" }) do |f|
      = f.fields_for :user_detail do |info|
        .form-group
          = info.label :first_name
          = info.text_field :first_name, autofocus: true, class: "form-control"
        .form-group
          = info.label :last_name
          = info.text_field :last_name, class: "form-control"
      .form-group
        = f.label :email
        = f.email_field :email, class: "form-control"
      .form-group
        = f.label :password
        %br
        = f.password_field :password, class: "form-control"
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: "form-control"
      .form-group
        = f.check_box :admitted
        = f.label :admitted, "This a test of the system."
      = f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-primary"

= render "devise/shared/links"

.row
  .container
    - if @questions.length > 0
      -@questions.each do |question|
        = render 'shared/question_short', question: question
    - else
      .text-center
        %h3
          %p No questions for this jurisdiction.
        %h4
          %p
          - if current_user
            = link_to "Click here", new_question_url
            to ask the first one!
          - else
            = link_to "Click here", new_user_registration_url
            to sign up and ask the first one!

.row
  .container
    .col-sm-8.col-sm-offset-2.text-center
      - if (paginate @questions).length >= 65
        .well.text-center
          = paginate @questions